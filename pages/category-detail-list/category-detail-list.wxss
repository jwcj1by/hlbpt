/* category-detail-list/category-detail-list.wxss */
/* 搜索框start */
.search-box {
  display: flex;
  justify-content: center;
  padding: 10rpx 0;
  margin-top: 10rpx;
  background: #ffffff;
  border-bottom: #dbdbdb solid 1px;
}

.search-box .search {
  position: relative;
  width: 90%;
  background: #f0f2f5;
  height: 60rpx;
  line-height: 60rpx;
  border-radius: 30rpx;

}

.search-box .search .icon {
  width: 40rpx;
  height: 40rpx;
  position: absolute;
  left: 40rpx;
  top: 10rpx;
}
/* 搜索框 end*/
.search-box .search input {
  height: 100%;
  line-height: 100%;
  margin-left: 100rpx;
}

.top-tab {
  width: 100%;
  position: fixed;
  height: 82rpx;
  top: 0;
  white-space: nowrap;
  background: #fff;
  z-index: 999;
}

.tab-li {
  box-sizing: border-box;
  display: inline-block;
  margin: 0 20rpx;
  text-align: center;
  height: 80rpx;
  line-height: 80rpx;
  font-size: 32rpx;
  background: #fff;
  border-bottom: 2rpx solid #fff;
  color: #333;
}

.tab-on {
  border-bottom: 2rpx solid #e71a41;
  color: #e71a41;
}

.content {
  position: relative;
  margin-top: 82rpx;
}

.v-good-list {
  height: 100%;
}

.swiper {
  height: 245rpx;
  width: 100%;
}

.swiper image {
  height: 245rpx;
  width: 100%;
}

.v-good-list-container {
  margin: 10rpx 0 0 0;
}

.v-good-list-container .v-good-list-item {
  display: flex;
  justify-content: space-between;
  background: #fff;
  padding: 20rpx 20rpx;
  border-bottom: #f5f5f5 solid 1rpx;
}

.v-good-list-container .v-good-list-item .left {
  margin-right: 20rpx;
}

.v-good-list-container .v-good-list-item image {
  width: 240rpx;
  height: 240rpx;
}

.v-good-list-container .v-good-list-item .right .tit {
  font-size: 30rpx;
  color: #333;
  display: -webkit-box;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  text-overflow: ellipsis;
}

.v-good-list-container .v-good-list-item .right .desc {
  font-size: 28rpx;
  color: #999;
}

.v-good-list-container .v-good-list-item .right .label {
  margin-top: 0;
}

.v-good-list-container .v-good-list-item .right .label text {
  padding: 0 10rpx;
  border-radius: 1rpx;
  font-size: 24rpx;
  height: 40rpx;
  line-height: 40rpx;
  color: #999;
  background-color: #f2f2f7;
  margin-right: 10rpx;
}

.v-good-list-container .v-good-list-item .right .price {
  margin-top: 36rpx;
}

.v-good-list-container .v-good-list-item .right .price .now {
  color: #e71a41;
}

.v-good-list-container .v-good-list-item .right .price .old {
  color: #999;
  text-decoration: line-through;
  margin-left: 10rpx;
}


/*  加载更多   */
.weui-loading {
  margin: 0 5px;
  width: 20px;
  height: 20px;
  display: inline-block;
  vertical-align: middle;
  -webkit-animation: weuiLoading 1s steps(12, end) infinite;
  animation: weuiLoading 1s steps(12, end) infinite;
  background: transparent url(data:image/svg+xml;base64,) no-repeat;
  background-size: 100%;
}
.weui-loadmore {
  width: 65%;
  margin: 1.5em auto;
  line-height: 1.6em;
  font-size: 14px;
  text-align: center;
}
.weui-loadmore__tips {
  display: inline-block;
  vertical-align: middle;
}

/* 没有更多了 */
.nomore {
  text-align: center;
  padding: .5rem 0;
  color: #b4b4b4;
  text-shadow: 0 2px 2px #d0d0d0;
}