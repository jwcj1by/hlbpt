page {
  
}

.tab-bar {
  border-bottom: 1rpx solid #e3e3e3;
  position: fixed;
  top: 0;
  left: 0;
  width: 750rpx;
  z-index: 1000;
  height: 72rpx;
  display: flex;
  justify-content: space-around;
  align-items: center;
  font-size: 28rpx;
  color: #2a2a2a;

}

.tab-bar ~ .order-list {
  padding-top: 90rpx;
}

.tab-bar navigator {
  display: flex;
  justify-content: center;
  align-items: center;
  height: 72rpx;
}

.tab-bar .active navigator {
  border-bottom: 4rpx solid #f00;
}

.tab-bar navigator text {
  height: 68rpx;
  line-height: 68rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  width: 130rpx;
}

.tab-bar .active text {
  color: #e71a41;
}

.order-list .order-item {
  background: #fff;
  padding: 32rpx 24rpx;
  margin-bottom: 20rpx;
  border-bottom: 1rpx solid #e3e3e3;
}

.order-list .order-info {
  font-size: 9pt;
  color: #888;
}

.goods-item {
  background: #fff;
  border-bottom: 1rpx solid #e3e3e3;
  padding: 32rpx 0;
  border-bottom: 1rpx solid #eee;
  margin: 20rpx 0;
}

.goods-item:first-child {
  border-top: 1rpx solid #eee;
}

.goods-item .goods-pic {
  width: 156rpx;
  height: 156rpx;
  margin-right: 20rpx;
}

.goods-item .goods-name {
  margin-bottom: 10rpx;
  -webkit-line-clamp: 2;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
}

.goods-item .attr-list, .goods-item .num {
  font-size: 9pt;
  color: #888;
}

.goods-item .attr-list .attr-item {
  display: inline-block;
  margin-right: 36rpx;
}

.goods-item .attr-list .attr-item:last-child {
  margin-right: 0;
}

.goods-item .price {
  color: #ff4544;
}

.order-option-btn {
  border: 1rpx solid #bbb;
  background: #fff;
  border-radius: 10rpx;
  height: 60rpx;
  line-height: 60rpx;
  color: inherit;
  margin-left: 20rpx;
  padding: 0 30rpx;
  font-size: 26rpx;
}

.order-option-btn::after {
  display: none;
}
.order-btn-hs{
  border-color: #e3e3e3;
  color: #999;
}
.return-index-btn {
  position: fixed;
  right: 0;
  bottom: 100rpx;
  display: inline-block;
  background: rgba(157, 157, 157, 0.5);
  padding: 10rpx 20rpx;
  z-index: 1000;
  border-radius: 10rpx 0 0 10rpx;
}

.hide {
  display: none;
}

.modal {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background-color: rgba(0, 0, 0, 0.5);
  z-index: 9999;
}
