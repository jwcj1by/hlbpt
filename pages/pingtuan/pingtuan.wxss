.top-tab {
  width: 750rpx;
  display: flex;
  flex-direction: row;
  background-color: #fff;
  height: 80rpx;
  align-items: center;
  margin: auto;
  padding: 0 4rpx;
  font-size: 34rpx;
  z-index: 6662;
  position: fixed;
  top: 0;
  justify-content: space-around;
}

.tab-li {
  width: 120rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  height: 80rpx;
  transition: all 600ms;
  color: #2a2a2a;
  border-bottom: 4rpx solid #fff;
}

.tab-on {
  border-bottom: 4rpx solid #e71a41;
  color: #e71a41;
}

.list-item {
  width: 750rpx;
  margin: 80rpx auto 20rpx;
  background-color: #fef3f5;
  position: relative;
  overflow: hidden;
  padding-bottom:10rpx;
}
.list-item-two {
  background-color: #f5f5f5;
}
.top-image {
  width: 750rpx;
  height: 405rpx;
}
.top-home-b2{
  width: 750rpx;
  height: 405rpx;  
}
.home-a {
