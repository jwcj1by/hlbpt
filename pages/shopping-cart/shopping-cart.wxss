.sc-opt {
  box-sizing: border-box;
  height: 80rpx;
  padding: 20rpx 10rpx;
}

.sc-opt-btn {
  float: right;
}

/* 编辑 */
.sc-opt-btn-edit-before {
  color: rgb(167, 134, 167);
}

.sc-opt-btn-edit-list {
  display: flex;
}

.sc-opt-btn-tea {
  flex: 1;
  margin-left: 10rpx;
}

/* 删除 */
.sc-opt-btn-del {
  color: rgb(202, 88, 117);
}

/* 完成 */
.sc-opt-btn-complate {
  color: rgb(159, 201, 147);
}

.sc-list {
  margin: 0 0 160rpx 0;
}

.sc-list-item-radio-box{ margin-right: 10rpx;}
.sc-list-item {
  position: relative;
  display: flex;
  align-items: center;
  background: #fff;
  margin-bottom: 10rpx;
  padding: 10rpx 20rpx;
}

.sc-list-item-pic-box {
  margin-left: 10rpx;
}

.sc-list-item-pic {
  width: 180rpx;
  height: 180rpx;
}

.sc-list-item-attr-box {
  margin-left: 10rpx;
}

.sc-list-item-attr-name {
  color: #666;
  font-size: 28rpx;
}

.sc-list-item-attr-list {
  color: #999;
  font-size: 24rpx;
}

.sc-list-item-attr-edit {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.sc-list-item-radio {
  width: 44rpx;
  height: 44rpx;
}

.sc-list-item-radio-img {
  width: 100%;
  height: 100%;
}

/* 商品图片 */

.sc-list{ margin-top: 10rpx;}

.sc-list-item-attr-edit-price {
  color: #ff4544;
  width: 20%;
}

.sc-list-item-attr-edit-num {
  width: 30%;
  display: flex;
  border-radius: 6rpx;
  background-color: #f5f5f5;
}

.sc-list-item-attr-edit-num-add {
  flex: 1;
  padding: 10rpx;
}

.sc-list-item-attr-edit-num-content {
  flex: 2;
  text-align: center;
  font-size: 24rpx;
}

.sc-list-item-attr-edit-num-reduce {
  flex: 1;
  padding: 10rpx;
}

.sc-list-item-attr-edit-image {
  width: 100%;
  height: 100%;
}

.sc-list-item-pic-account-select_all-radio {
  width: 44rpx;
  height: 44rpx;
  margin-left: 20rpx;
}

.sc-list-item-pic-account-select_all-radio-img {
  width: 100%;
  height: 100%;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 100rpx;
  background: #fff;
  width: 100%;
  z-index: 1000;
  display: flex;
  align-items: center;
}

.bottom-bar .submit-btn {
  background: #ff4544;
  color: #fff;
  width: 240rpx;
  height: 100rpx;
  text-align: center;
  font-size: 32rpx;
}

.sc-list-empty {
  width: 100%;
  height: 600rpx;
  /* border-bottom: 2rpx solid rgba(202, 198, 198, 0.6); */
  position: relative;
}

.sc-list-empty-warp {
  width: 400rpx;
  height: 500rpx;
  position: absolute;
  padding: 20rpx 30rpx;
  background-color: #FFF;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  text-align: center;
}

.sc-list-empty-pic {
  width: 100%;
  height: 80%;
  margin-left: 50%;
  transform: translateX(-50%);
}

.sc-list-empty-font {
  width: 100%;
}

