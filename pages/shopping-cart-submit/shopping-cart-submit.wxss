@import "/wxss/adr.wxss";
page {
  background-color: #f5f5f5;
  color: #666;
}

.goods-preview {
  width: 100%;
  height: 130rpx;
  background-color: #FFF;
  display: flex;
}

.goods-priview-photos {
  flex: 8;
  display: flex;
  width: 80%;
  height: 100%;
  /* background-color: #aaa; */
  padding: 10rpx 0;
}

.goods-priview-loadmore {
  flex: 2;
  position: relative;
}

.goods-priview-loadmore-num {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  right: 10rpx;
}

.goods-priview-photos-item {
  flex: 1;
  margin-left: 10rpx;
  /* border-radius: 50%; */
}

.goods-other-money {
  margin-top: 30rpx;
}

.bottom-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  height: 100rpx;
  background: #fff;
  width: 100%;
  z-index: 1000;
  display: flex;
  align-items: center;
}

.bottom-bar .submit-btn {
  background: #ff4544;
  color: #fff;
  width: 240rpx;
  height: 100rpx;
  text-align: center;
  font-size: 32rpx;
}

.order-coupon {
  width: 750rpx;
  background: #fff;
  height: 80rpx;
  font-size: 26rpx;
  border-radius: 8rpx; 
}

.order-coupon .o-ml {
  margin: 0 26rpx;
  display: flex;
  align-items: center;
}

.order-coupon input {
  padding: 10rpx 0;
}

.address-picker {
  background: #fff;
  margin: 20rpx 0;
  position: relative;
}

.cart-list {
  width: 750rpx;
  margin: 20rpx auto;
}

.cart-item {
  background: #fff;
  padding: 32rpx 24rpx;
  border-radius: 8rpx;
  overflow: hidden;
  margin-bottom: 20rpx;
}

.cart-item .goods-pic {
  width: 152rpx;
  height: 152rpx;
  margin-right: 20rpx;
}


.cart-item .goods-name {
  margin-bottom: 10rpx;
  -webkit-line-clamp: 1;
  display: -webkit-box;
  -webkit-box-orient: vertical;
  overflow: hidden;
  font-size: 26rpx;
}

.cart-item .attr-list, .cart-item .num {
  font-size: 9pt;
  color: #888;
}

.cart-item .attr-list .attr-item {
  display: inline-block;
  margin-right: 36rpx;
}

.cart-item .attr-list .attr-item:last-child {
  margin-right: 0;
}

.cart-item .price {
  color: #ff4544;
  margin: 10rpx 0 0;
}
.number-input-box {
  height: 60rpx;
}
.attr-num {
  margin-top:20rpx;
  align-items: flex-end;
}
.number-input-box .number-input {
  height: 60rpx !important;
  border: 1px solid #dbdbdb;
  text-align: center;
  width: 100rpx;
  border-left:none;
  border-right: none;
  font-size: 12px;
}

.number-input-box .number-btn {
  height: 100% !important;
  width: 60rpx;
  border: 1px solid #dbdbdb;
  color: #666;
}

.number-input-box .number-btn.disabled {
  background: #f6f6f6;
  color: #aaa;
}
.coupon-picker {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1001;
  background: #fff;
  border-top: 1rpx solid #e3e3e3;
}

.coupon-list {
  padding: 34rpx;
}

.coupon-list .coupon-item {
  height: 152rpx;
  width: 682rpx;
  position: relative;
  margin-bottom: 24rpx;
}

.coupon-list .coupon-item.coupon-status-1 .coupon-right,
.coupon-list .coupon-item.coupon-status-2 .coupon-right {
  color: rgba(0, 0, 0, 0.35) !important;
}

.coupon-list .coupon-item .coupon-bg {
  width: 100%;
  height: 100%;
  position: absolute;
  top: 0;
  left: 0;
  z-index: -1;
}

.coupon-list .coupon-item .coupon-status-icon {
  width: 140rpx;
  height: 98rpx;
  position: absolute;
  top: 0;
  right: 8rpx;
  z-index: 1;
}

.coupon-list .coupon-item .coupon-left {
  color: #fff;
  width: 202rpx;
}

.coupon-list .coupon-item .coupon-right {
  padding: 20rpx 10rpx;
}

.active {
  border-bottom: 4rpx #ff4544 solid;
  color: #ff4544;
}
