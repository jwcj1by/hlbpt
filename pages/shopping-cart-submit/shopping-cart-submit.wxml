<!-- order-submit.wxml -->
<navigator url="/pages/address-picker/address-picker" class='adr-text icon-right'>
	<!-- 地址 -->
	<block wx:if="{{ address }}">
		<image src="/image/car-border-top.png" style="width : 750rpx;height :  10rpx; position : absolute;top : 0;left : 0;" />
		<view class='adr-l'>
			<view>{{address.name}}</view>
			<view class='adr-on' wx:if="{{  item.is_default == 1 }}">默认</view>
		</view>
		<view class='adr-r'>
			<view>{{address.mobile}}</view>
			<view class='adr-r-a'>
				{{address.province}}{{address.city}}{{address.district}}{{address.detail}}
			</view>
		</view>
	</block>
	<block wx:else>
		<view class="flex-grow-1 flex-y-center flex-x-center">请选择收货地址</view>
	</block>
</navigator>
<!-- 商品图片预览 -->
<view class="goods-preview">
	<view class="goods-priview-photos">
		<image
		       wx:for="{{ goods_list }}"
		       wx:for-index="index"
		       wx:for-item="item"
		       wx:key="{{ index }}"
		       class="goods-priview-photos-item"
		       src="{{item.goods_pic}}" />
	</view>
	<view class="goods-priview-loadmore">
		<text class="goods-priview-loadmore-num">共{{ goods_list.length }}件</text>
	</view>
</view>

<!-- 各项费用 -->
<view class="flex-row order-coupon goods-other-money">
	<view class="flex-grow-1 o-ml">运费：</view>
	<view class="flex-grow-0 o-ml">
		<block wx:if="{{ address }}">
			<view>￥{{express_price}}</view>
		</block>
		<block wx:elif="{{ offline==1 }}">
			<view>￥0.00</view>
		</block>
		<block wx:else>
			<view style="color : #999">请先选择收货地址</view>
		</block>
	</view>
</view>
<view style='height : 100rpx;' />
